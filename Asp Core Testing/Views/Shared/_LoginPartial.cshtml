@using Microsoft.AspNetCore.Identity
@using Asp_Core_Testing.Models
@using Asp_Core_Testing.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@functions
{
    public string getName(string User)
    {
        UserModel UserObj = new UserModel();
        return UserObj.getName(User);

    }

}

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-left">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" class="Login" title="Manage">Hello @getName(UserManager.GetUserName(User))!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-left">
        <li><a asp-area="" asp-controller="Account" asp-action="Register" class="linkText">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login" class="linkText">Log in</a></li>
    </ul>
}
