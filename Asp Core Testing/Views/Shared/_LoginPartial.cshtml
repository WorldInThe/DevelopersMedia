@using Microsoft.AspNetCore.Identity
@using Asp_Core_Testing.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="">
        <div class="nav navbar-nav navbar-left" style="text-align: left; padding-top: 7px; padding-left: 0px; font-size:18px; line-height: 0px">
            <br />
            <a asp-area="" asp-controller="Manage" asp-action="Index" class="Login" title="Manage">@UserManager.GetUserName(User)</a>
            <br />
            <button type="submit" class="btn btn-link navbar-btn navbar-link" style="font-size:18px; padding-left: 27px">Log out</button>
        </div>
    </form>
}
else
{
    <div>
        <a asp-area="" asp-controller="Account" asp-action="Register" class="linkText">Register</a>
        <a asp-area="" asp-controller="Account" asp-action="Login" class="linkText">Log in</a>
    </div>
}
